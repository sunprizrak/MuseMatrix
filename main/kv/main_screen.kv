#:import MainScreen main.screens
#:import ScrollEffect kivy.effects.scroll.ScrollEffect


<MainScreen>
    name: 'main_screen'
    md_bg_color: app.theme_cls.bg_light

    core: app

    MDRelativeLayout:
        id: test
        orientation: 'vertical'
        md_bg_color: root.md_bg_color if nav_drawer.state == 'close' else app.theme_cls.bg_dark

        MDTopAppBar:
            id: main_top_bar
            pos_hint: {'top': 1}
            type_height: 'small'
            md_bg_color: self.parent.md_bg_color
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
            elevation: 0

        MDCircularLayout:
            size_hint_y: None
            height: root.height - main_top_bar.height
            row_spacing: min(self.size) * 0.1
            start_from: 90
            degree_spacing: 90
            circular_radius: dp(90)

            MDFloatingActionButton:
                icon: 'image'
                type: 'large'
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                shadow_color: 'white'
                on_release:
                    app.root.transition = MDSwapTransition()
                    app.root.current = 'create_image_screen'


            MDFloatingActionButton:
                icon: 'image-edit'
                type: 'large'
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                shadow_color: 'white'
                on_release:
                    app.root.transition = MDSwapTransition()
                    app.root.current = 'edit_image_screen'

            MDFloatingActionButton:
                icon: 'chat'
                type: 'large'
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                shadow_color: 'white'
                on_release:
                    app.root.transition = MDSwapTransition()
                    app.root.current = 'chat_gpt_screen'

            MDFloatingActionButton:
                icon: 'image-sync'
                type: 'large'
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                shadow_color: 'white'
                on_release:
                    app.root.transition = MDSwapTransition()
                    app.root.current = 'variable_image_screen'

        Button:
            text: 'Show Rewarded Ad'
            size_hint: None, None
            size: dp(150), dp(50)
            on_release:
                root.show_ads()

    MDNavigationLayout:

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    id: nav_drawer_header
                    title: root.email
                    title_font_size: '17sp'
                    text: str(root.credit) + ' credit'
                    source: root.avatar
                    spacing: dp(15)
                    padding: dp(10), 0, 0, dp(10)

                MDNavigationDrawerDivider:

                MDNavigationDrawerItem:
                    icon: "cog"
                    text: "Settings"
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    selected_color: "white"
                    on_release:
                        root.open_settings()

                MDNavigationDrawerDivider:

                MDNavigationDrawerItem:
                    id: collection
                    icon: 'image-multiple'
                    text: 'MyCollection'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    selected_color: "white"
                    on_release:
                        root.open_collection()

                MDNavigationDrawerDivider:

                MDNavigationDrawerItem:
                    icon: 'location-exit'
                    text: 'Exit'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    selected_color: 'white'
                    on_release:
                        root.exit()
















