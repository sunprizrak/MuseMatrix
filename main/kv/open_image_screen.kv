<OpenImageScreen>
    name: 'open_img_screen'

    core: app

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: app_bar
            specific_text_color: 'gray'
            type_height: 'small'
            md_bg_color: app.theme_cls.bg_normal
            left_action_items: [['arrow-left', lambda x: root.back(full_image.back_screen)]]
            right_action_items: [['download', lambda x: root.download(full_image)]]
            elevation: 0

        MDBoxLayout:

            AsyncImage:
                id: full_image
                mipmap: True
                allow_stretch: True





