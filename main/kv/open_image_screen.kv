<OpenImageScreen>
    name: 'open_img_screen'

    core: app

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: app_bar
            type_height: 'small'
            md_bg_color: '#2d2734'
            left_action_items: [['arrow-left', lambda x: root.back(full_image.back_screen)]]
            right_action_items: [['download', lambda x: root.download(full_image), 'download']]
            adaptive_height: True

        MDBoxLayout:

            AsyncImage:
                id: full_image
                mipmap: True
                allow_stretch: True





