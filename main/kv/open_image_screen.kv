<OpenImageScreen>
    name: 'open_img_screen'

    MDRelativeLayout:

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'

            MDIconButton:
                icon: 'arrow-left-bold-circle-outline'
                icon_size: '38'
                theme_icon_color: 'Custom'
                icon_color: 'gray'
                on_press:
                    self.icon_color = app.theme_cls.primary_color
                on_release:
                    self.icon_color = 'gray'
                    root.back(full_image.back_screen)

        AsyncImage:
            back_screen: ''

            id: full_image
            size: self.texture_size
            mipmap: True
            allow_stretch: True

        MDBoxLayout:
            orientation: 'horizontal'

            MDIconButton:
                icon: 'download'
                icon_size: '38'
                theme_icon_color: "Custom"
                icon_color: 'gray'
                on_press:
                    self.text_color = app.theme_cls.primary_color
                on_release:
                    self.text_color = 'gray'
                    root.download(full_image.texture)

