#:import SettingsScreen main.screens

<SettingsScreen>
    name: 'settings_screen'
    md_bg_color: app.theme_cls.bg_light

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: settings_top_bar
            title: 'Settings'
            anchor_title: 'left'
            md_bg_color: root.md_bg_color
            left_action_items: [['arrow-left-bold', lambda x: app.back(screen='main_screen')]]
            elevation: 0

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            padding: dp(24)

            MDLabel:
                text: 'Account'
                color: 'green'
                bold: True
                adaptive_height: True
                padding_x: dp(16)

            OneLineListItem:
                text: 'Change password'
                on_release:
                    app.root.transition = MDSlideTransition()
                    app.root.transition.direction = 'left'
                    app.root.current = 'change_password_screen'

            MDSeparator:


        MDWidget:


    MDIcon:
        icon: 'cog'
        font_size: sp(200)
        theme_text_color: 'Custom'
        text_color: '#60675B'
        pos_hint: {'center_x': .5, 'center_y': .5}
        opacity: .4