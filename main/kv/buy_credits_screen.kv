#:import BuyCreditsScreen main.screens

<BuyCreditsScreen>
    name: 'buy_credits_screen'
    md_bg_color: app.theme_cls.bg_light

    MDFloatLayout:

        MDTopAppBar:
            id: buy_top_bar
            pos_hint: {'top': 1}
            type_height: 'small'
            title: 'buy credits'
            anchor_title: 'left'
            md_bg_color: root.md_bg_color
            left_action_items: [['arrow-left-bold', lambda x: app.back(screen='main_screen')]]
            elevation: 0

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(15)
            size_hint_x: None
            width: dp(300)

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(5)
                size_hint_y: None
                height: button1.height
                size_hint_x: .8
                pos_hint: {'center_x': .5}

                MDLabel:
                    text: '$99.99'

                MDRaisedButton:
                    id: button1
                    text: '1000 credits'
                    font_size: sp(25)
                    md_bg_color: app.theme_cls.primary_color
                    on_release:
                        False

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(5)
                size_hint_y: None
                height: button2.height

                MDLabel:
                    text: '$79.99'

                MDRaisedButton:
                    id: button2
                    text: '2000 credits'
                    font_size: sp(25)
                    md_bg_color: app.theme_cls.primary_color
                    on_release:
                        False

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(5)
                size_hint_y: None
                height: button3.height

                MDLabel:
                    text: '$59.99'

                MDRaisedButton:
                    id: button3
                    text: '3000 credits'
                    font_size: sp(25)
                    md_bg_color: app.theme_cls.primary_color
                    on_release:
                        False

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(5)
                size_hint_y: None
                height: button4.height

                MDLabel:
                    text: '$39.99'

                MDRaisedButton:
                    id: button4
                    text: '4000 credits'
                    font_size: sp(25)
                    md_bg_color: app.theme_cls.primary_color
                    on_release:
                        False

