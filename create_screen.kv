<Check@MDCheckbox>
    group: 'image_size'
    size_hint: None, None
    size: 30, 30

<CheckLabel@MDLabel>
    font_size: 13
    size_hint_x: None
    width: 65



<CreateScreen>
    name: 'create_screen'

    image_section: image_section
    option_section: option_section

    ImageSection:
        id: image_section
        size_hint: 1, .5
        pos_hint: {'top': 1}
        padding: 15

    OptionSection:
        prompt: prompt.text
        image_count: int(img_count.text) if img_count.text else 1
        image_size: ''

        id: option_section
        size_hint: 1, .5
        orientation: 'vertical'
        spacing: 10
        padding: 15

        MDLabel:
            adaptive_size: True
            text: 'Choose picture size:'

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_size: True
            pos_hint: {'center_x': .5}

            Check:
                on_active: self.parent.parent.image_size = check_label_1.text

            CheckLabel:
                id: check_label_1
                text: '256x256'

            Check:
                on_active: self.parent.parent.image_size = check_label_2.text

            CheckLabel:
                id: check_label_2
                text: '512x512'

            Check:
                on_active: self.parent.parent.image_size = check_label_3.text

            CheckLabel:
                id: check_label_3
                text: '1024x1024'

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_size: True

            MDLabel:
                size_hint_x: None
                width: 65
                text: 'Amount:'

            MDIconButton:
                group: 'amount'
                icon: 'minus'
                icon_size: 20
                on_release: img_count.text = str(int(img_count.text) - 1) if int(img_count.text) >= 2 else img_count.text

            MDTextFieldRect:
                id: img_count
                #mode: 'round'
                text: '1'
                halign: 'center'
                pos_hint: {'center_y': .5}
                size_hint: None, None
                height: 30
                width: 50
                input_filter: 'int'
                disabled: True

            MDIconButton:
                icon: 'plus'
                icon_size: 20
                on_release: img_count.text = str(int(img_count.text) + 1) if int(img_count.text) <= 9 else img_count.text

        MDTextFieldRect:
            id: prompt
            size_hint_y: None
            height: 100
            pos_hint: {'center_x': .5}
            padding: 10
            auto_indent: True

        MDRaisedButton:
            text: 'Create'
            font_size: 15
            md_bg_color: 'green'
            pos_hint: {'center_x': .5}
            on_release: root.create()