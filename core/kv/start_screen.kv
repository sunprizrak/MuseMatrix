#:import StartScreen core.screen
#:import MDSwapTransition kivymd.uix.transition.transition.MDSwapTransition
#:import MDSlideTransition kivymd.uix.transition.transition.MDSlideTransition

<StartScreen>
    name: 'start_screen'

    core: app

    MDFloatLayout:

        MDTextButton:
            text: 'Sign in'
            theme_text_color: 'Custom'
            font_name: 'core/font/Barcelona-Graffiti-Bombing.otf'
            font_size: sp(30)
            pos_hint: {'x': .7, 'y': .9}
            on_release:
                app.root.transition = MDSwapTransition()
                app.root.current = 'login_screen'

        MDLabel:
            text: 'Art AI'
            font_name: 'core/font/Barcelona-Graffiti-Bombing.otf'
            theme_text_color: 'Custom'
            text_color: "#9b1fe8"
            font_size: sp(100)
            halign: 'center'

        MDTextButton:
            id: b_registration
            text: 'Sign up'
            font_name: 'core/font/Barcelona-Graffiti-Bombing.otf'
            theme_text_color: 'Custom'
            text_color: "#2525db"
            font_size: sp(50)
            pos_hint: {'center_x': .5, 'y': .1}
            on_release:
                app.root.transition = MDSlideTransition()
                app.root.transition.direction = 'up'
                app.root.current = 'reg_screen'