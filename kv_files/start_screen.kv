#:import StartScreen screens
#:import MDSwapTransition kivymd.uix.transition.transition.MDSwapTransition
#:import MDSlideTransition kivymd.uix.transition.transition.MDSlideTransition

<StartScreen>
    name: 'start_screen'
    md_bg_color: app.theme_cls.bg_light

    core: app

    MDFloatLayout:

        MDTextButton:
            text: 'Sign in'
            theme_text_color: 'Custom'
            text_color: 'green'
            font_size: sp(30)
            pos_hint: {'x': .7, 'y': .9}
            on_release:
                app.root.transition = MDSwapTransition()
                app.root.current = 'login_screen'

        MDBoxLayout:
            padding: dp(10)
            pos_hint: {'center_x': .5, 'center_y': .65}

            Image:
                source: 'assets/img/head_ii.png'
                allow_stretch: True
                mipmap: True

        MDLabel:
            text: 'MindPics'
            theme_text_color: 'Custom'
            text_color: "#9b1fe8"
            md_bg_color: self.parent.md_bg_color
            font_size: sp(80)
            halign: 'center'
            pos_hint: {'center_y': .3}

        MDTextButton:
            id: b_registration
            text: 'Sign up'
            theme_text_color: 'Custom'
            text_color: "#2525db"
            font_size: sp(50)
            pos_hint: {'center_x': .5, 'y': .05}
            on_release:
                app.root.transition = MDSlideTransition()
                app.root.transition.direction = 'up'
                app.root.current = 'reg_screen'