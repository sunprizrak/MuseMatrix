#:import StartScreen screens
#:import MDSwapTransition kivymd.uix.transition.transition.MDSwapTransition
#:import MDSlideTransition kivymd.uix.transition.transition.MDSlideTransition

<LogoBox@CommonElevationBehavior+MDBoxLayout>:


<StartScreen>:
    name: 'start_screen'

    MDFloatLayout:

        LogoBox:
            size_hint: None, None
            size: dp(256), dp(256)
            pos_hint: {'center_x': .5, 'center_y': .65}
            radius: dp(67)
            elevation: dp(5)
            shadow_radius: dp(67)
            shadow_softness: dp(12)
            shadow_offset: dp(12), dp(-12)
            shadow_color: 'white'

            Image:
                source: 'assets/img/logo_app.png'
                fit_mode: 'contain'
                mipmap: True

        MDLabel:
            text: 'MuseMatrix'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color
            md_bg_color: self.parent.md_bg_color
            font_size: sp(60)
            halign: 'center'
            pos_hint: {'center_y': .3}

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            spacing: dp(15)
            padding: dp(15), dp(15), dp(15), dp(15)
            pos_hint: {'center_x': .5}

            MDBoxLayout:
                adaptive_height: True

                MDRaisedButton:
                    text: "login"
                    md_bg_color: app.theme_cls.primary_color
                    font_size: sp(20)
                    size_hint_x: 1
                    on_release:
                        app.root.transition = MDSwapTransition()
                        app.root.current = 'login_screen'

            MDBoxLayout:
                adaptive_height: True

                MDRaisedButton:
                    text: 'registrate'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.bg_light
                    font_size: sp(20)
                    md_bg_color: 'white'
                    size_hint_x: 1
                    on_release:
                        app.root.transition = MDSwapTransition()
                        app.root.current = 'reg_screen'