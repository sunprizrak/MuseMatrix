#:import StartScreen screens
#:import MDSwapTransition kivymd.uix.transition.transition.MDSwapTransition
#:import MDSlideTransition kivymd.uix.transition.transition.MDSlideTransition
#:import get_hex_from_color kivy.utils.get_hex_from_color

<LogoBox@CommonElevationBehavior+MDBoxLayout>:



<StartScreen>:
    name: 'start_screen'

    MDFloatLayout:

        LogoBox:
            id: button
            size_hint: None, None
            size: dp(256), dp(256)
            pos_hint: {'center_x': .5, 'center_y': .65}
            radius: dp(67)
            theme_shadow_color: 'Custom'
            elevation_level: 5
            shadow_radius: dp(67)
            shadow_softness: dp(12)
            shadow_offset: dp(12), dp(-12)
            shadow_color: 'white'

            Image:
                source: 'assets/img/logo_app.png'
                fit_mode: 'contain'
                mipmap: True
#
        MDLabel:
            text: 'MuseMatrix'
            font_style: 'Display'
            role: 'large'
            theme_font_name: "Custom"
            font_name: 'Hacked'
            theme_text_color: 'Custom'
            text_color: '#019DF2'
            halign: 'center'
            pos_hint: {'center_y': .25}

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            spacing: dp(15)
            padding: dp(15), dp(15), dp(15), dp(15)
            pos_hint: {'center_x': .5}

            MDBoxLayout:
                adaptive_height: True

                MDButton:
                    style: "filled"
                    theme_width: 'Custom'
                    size_hint_x: 1
                    radius: dp(10)
                    on_release:
                        app.root.transition = MDSwapTransition()
                        app.root.current = 'login_screen'

                    MDButtonText:
                        text: "sign in"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        theme_font_name: "Custom"
                        font_name: 'Hacked'
                        font_style: 'Display'
                        role: 'small'
                        theme_text_color: 'Custom'
                        text_color: 'white'

            MDBoxLayout:
                adaptive_height: True

                MDButton:
                    style: 'filled'
                    theme_bg_color: "Custom"
                    md_bg_color: 'white'
                    theme_width: 'Custom'
                    size_hint_x: 1
                    radius: dp(10)
                    on_release:
                        app.root.transition = MDSwapTransition()
                        app.root.current = 'reg_screen'

                    MDButtonText:
                        text: 'sign up'
                        pos_hint: {"center_x": .5, "center_y": .5}
                        theme_font_name: "Custom"
                        font_name: 'Hacked'
                        theme_text_color: 'Custom'
                        text_color: '#1F1F1F'
                        font_style: 'Display'
                        role: 'small'

