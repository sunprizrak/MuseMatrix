#:import SpeechToTextScreen screens.speech_to_text


<SpeechToTextScreen>
    name: 'speech_to_text_screen'

    MDFloatLayout:
        id: speech_layout

        MDBoxLayout:
            orientation: 'vertical'

            MDTopAppBar:
                type: 'small'
                theme_bg_color: 'Custom'
                md_bg_color: self.theme_cls.backgroundColor

                MDTopAppBarLeadingButtonContainer:

                    MDActionTopAppBarButton:
                        icon: 'arrow-left-bold'
                        theme_icon_color: 'Custom'
                        icon_color: self.theme_cls.primaryColor
                        ripple_effect: False
                        focus_behavior: False
                        on_release:
                            app.back(screen='main_screen')

                MDTopAppBarTitle:
                    text: 'speech to text'
                    theme_font_name: "Custom"
                    font_name: 'Hacked'

            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True

                MDBoxLayout:
                    id: sound_layout
                    orientation: 'horizontal'
                    spacing: dp(10)
                    padding: dp(10)
                    adaptive_height: True

                    MDBoxLayout:
                        id: sound
                        orientation: 'horizontal'
                        icon: 'music' if root.sound else ''
                        text: ''
                        spacing: dp(5)
                        pos_hint: {'center_x': .5}

                        MDIcon:
                            id: icon
                            icon: self.parent.icon
                            theme_icon_color: 'Custom'
                            icon_color: self.theme_cls.primaryColor
                            adaptive_size: True

                        MDLabel:
                            id: name
                            text: self.parent.text
                            adaptive_size: True

                    MDBoxLayout:
                        orientation: 'horizontal'
                        disabled: False if root.sound else True
                        adaptive_size: True
                        spacing: dp(10)
                        opacity: 0 if self.disabled else 1

                        MDBoxLayout:
                            id: sound_option
                            orientation: 'horizontal'
                            icon_play: 'play' if root.sound else ''
                            icon_stop: 'stop' if root.sound else ''
                            pos_hint: {"center_x": .5}
                            adaptive_size: True
                            spacing: dp(5)

                            MDButton:
                                size_hint: None, None
                                size: icon.size
                                on_release:
                                    root.sound_play()

                                MDButtonIcon:
                                    icon: sound_option.icon_play
                                    pos_hint: {'center_x': .5, 'center_y': .5}

                            MDButton:
                                size_hint: None, None
                                size: icon.size
                                on_release:
                                    root.sound_stop()

                                MDButtonIcon:
                                    icon: sound_option.icon_stop
                                    pos_hint: {'center_x': .5, 'center_y': .5}

                        MDButton:
                            id: delete_button
                            size_hint: None, None
                            size: icon.size
                            on_release:
                                root.delete_sound()

                            MDButtonIcon:
                                icon: 'close' if root.sound else ''
                                pos_hint: {'center_x': .5, 'center_y': .5}

            MDBoxLayout:
                id: audio_transcript
                text: ''
                pos_hint: {'center_x': .5}

                MDScrollView:
                    do_scroll_x: False
                    scroll_y: 1
                    effect_cls: ScrollEffect
                    padding: dp(10)

                    MDLabel:
                        id: audio_text
                        text: self.parent.parent.text
                        padding: dp(10), dp(10)
                        adaptive_height: True

            MDBoxLayout:
                id: bottom_buttons
                padding: dp(10)
                adaptive_height: True
                disabled: True

                MDButton:
                    style: 'elevated'
                    radius: dp(10)
                    opacity: 0 if self.disabled else 1
                    on_release:
                        root.copy_to_buffer()

                    MDButtonIcon:
                        icon: 'content-copy'
                        pos_hint: {'center_x': .5, 'center_y': .5}

        MDBoxLayout:
            id: add_sound_button
            pos_hint: {"center_x": .5, 'center_y': .55}
            adaptive_size: True

            MDButton:
                theme_width: 'Custom'
                width: dp(84)
                theme_height: 'Custom'
                height: dp(84)
                style: 'elevated'
                opacity: 0 if self.disabled else 1
                on_release:
                    app.file_manager_open()

                MDButtonIcon:
                    icon: 'music-note-plus'
                    theme_font_size: "Custom"
                    font_size: sp(58)
                    pos_hint: {'center_x': .5, 'center_y': .5}

        MDCircularProgressIndicator:
            id: speech_spin
            size_hint: None, None
            size: dp(38), dp(38)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: False



