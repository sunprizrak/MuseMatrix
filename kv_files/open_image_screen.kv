#:import OpenImageScreen screens.open_image


<OpenImageScreen>
    name: 'open_img_screen'

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: app_bar
            type: 'small'
            theme_bg_color: 'Custom'
            md_bg_color: self.theme_cls.backgroundColor
            # left_action_items: [['arrow-left-bold', lambda x: root.back(root.back_screen)]]
            # right_action_items: [['delete', lambda x: root.delete(img_id=carousel.current_slide.img_id, widget_selection=carousel.current_slide.pre_parent)], ['download', lambda x: root.download(carousel.current_slide)]] if root.back_screen == 'collection_screen' else [['download', lambda x: root.download(carousel.current_slide)]]
            MDTopAppBarLeadingButtonContainer:
                id: left_button

                MDActionTopAppBarButton:
                    icon: 'arrow-left-bold'
                    ripple_effect: False
                    focus_behavior: False
                    on_release:
                        root.back(screen=root.back_screen)


        Carousel:
            id: carousel

