#:import OpenImageScreen screens


<OpenImageScreen>
    name: 'open_img_screen'
    md_bg_color: app.theme_cls.bg_light

    core: app

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: app_bar
            title: 'x'.join(str(full_image.texture_size).split(', ')) if full_image else ''
            type_height: 'small'
            md_bg_color: root.md_bg_color
            left_action_items: [['arrow-left-bold', lambda x: root.back(full_image.back_screen)]]
            right_action_items: [['download', lambda x: root.download(full_image)]]
            elevation: 0

        Image:
            id: full_image
            mipmap: True
            fit_mode: 'contain'
            pos_hint: {'center_y': .5}



