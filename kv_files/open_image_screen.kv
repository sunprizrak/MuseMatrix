#:import OpenImageScreen screens


<OpenImageScreen>
    name: 'open_img_screen'
    md_bg_color: app.theme_cls.bg_light

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: app_bar
            type_height: 'small'
            md_bg_color: root.md_bg_color
            left_action_items: [['arrow-left-bold', lambda x: root.back(root.back_screen)]]
            right_action_items: [['trash-can', lambda x: root.delete(img_id=carousel.current_slide.img_id, widget_selection=carousel.current_slide.pre_parent)], ['download', lambda x: root.download(carousel.current_slide)]] if root.back_screen == 'collection_screen' else [['download', lambda x: root.download(carousel.current_slide)]]
            elevation: 0

        MDCarousel:
            id: carousel

            on_slide_complete:
                app_bar.title = 'x'.join(str(carousel.current_slide.texture_size).split(', '))



