#:import InstructionScreen screens

<InstructionScreen>
    name: 'instruction_screen'

    core: app

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.bg_light

        MDTopAppBar:
            id: instruction_top_bar
            type_height: 'small'
            title: 'instruction'
            anchor_title: 'left'
            md_bg_color: self.parent.md_bg_color
            left_action_items: [['arrow-left-bold', lambda x: app.back(screen='main_screen')]]
            elevation: 0

        MDTabs:
            indicator_color: 'white'

            Tab:
                title: 'Create Image'

                MDScrollView:
                    effect_cls: ScrollEffect
                    do_scroll_x: False

                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: dp(5)
                        size_hint_y: None
                        height: self.minimum_height

                        MDLabel:
                            text: "With the create image function you to create an original image given a text prompt. Generated images can have a size of 256x256, 512x512, or 1024x1024 pixels. Smaller sizes are faster to generate. You can request 1-10 images at a time. The more detailed the description, the more likely you are to get the result you want. When downloading a generated image, it is saved to the user's gallery and device.\nGenerating one image requires 20 coins."
                            font_style: 'Instruction'
                            halign: 'left'
                            line_height: 1.5
                            adaptive_height: True

                        MDLabel:
                            text: 'Example:'
                            font_style: 'Instruction'
                            padding: dp(10)
                            adaptive_height: True

                        MDLabel:
                            text: '1. Select the number of images from 1 to 10'
                            font_style: 'Instruction'
                            padding: [dp(15), dp(5), dp(5), dp(5)]
                            adaptive_height: True

                        MDBoxLayout:
                            adaptive_height: True

                            Image:
                                source: 'assets/img/instruction_count.png'
                                fit_mode: 'scale-down'
                                mipmap: True

                        MDLabel:
                            text: '2. Select image size'
                            font_style: 'Instruction'
                            padding: [dp(15), dp(5), dp(5), dp(5)]
                            adaptive_height: True

                        MDBoxLayout:
                            adaptive_height: True

                            Image:
                                source: 'assets/img/instruction_size.png'
                                fit_mode: 'scale-down'
                                mipmap: True

                        MDLabel:
                            text: '3. Describe the picture you want to generate'
                            font_style: 'Instruction'
                            padding: [dp(15), dp(5), dp(5), dp(5)]
                            adaptive_height: True

                        MDBoxLayout:
                            adaptive_height: True

                            Image:
                                source: 'assets/img/instruction_prompt.png'
                                fit_mode: 'scale-down'
                                mipmap: True

                        MDLabel:
                            text: '4. Click on the generate button'
                            font_style: 'Instruction'
                            padding: [dp(15), dp(5), dp(5), dp(5)]
                            adaptive_height: True

                        MDBoxLayout:
                            adaptive_height: True

                            Image:
                                source: 'assets/img/instruction_button.png'
                                fit_mode: 'scale-down'
                                mipmap: True



            Tab:
                title: 'Edit Image'

            Tab:
                title: 'Variable Image'

            Tab:
                title: 'Chat GPT'

            Tab:
                title: 'Speech to text'
