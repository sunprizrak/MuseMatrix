#:import LoginScreen screens
#:import MDSlideTransition kivymd.uix.transition.transition.MDSlideTransition
#:import platform kivy.utils


<LogTextField@MDTextField>
    mode: "rectangle"
    unfocus_on_touch: False
    text_color_normal: 'white'
    hint_text_color_normal: 'white'
    helper_text_mode: 'on_error'



<LoginScreen>
    name: 'login_screen'
    md_bg_color: app.theme_cls.bg_light

    MDFloatLayout:

        MDTopAppBar:
            pos_hint: {'top': 1}
            type_height: 'small'
            title: 'Login'
            anchor_title: 'left'
            md_bg_color: root.md_bg_color
            left_action_items: [['arrow-left-bold', lambda x: app.back(screen='start_screen')]]
            elevation: 0

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            pos_hint: {'center_x': .5, 'center_y': .75}
            adaptive_height: True
            size_hint_max_x: dp(300)

            LogTextField:
                id: email_field
                hint_text: 'email'
                pos_hint: {'center_x': .5}

            MDRelativeLayout:
                size_hint: 1, None
                height: password_field.height
                pos_hint: {'center_x': .5}

                LogTextField:
                    id: password_field
                    password: True
                    hint_text: 'Password'

                MDIconButton:
                    icon: "eye"
                    pos_hint: {"center_y": .45}
                    theme_text_color: "Custom"
                    text_color: password_field.text_color_focus if password_field.focus else 'white'
                    pos: password_field.width - self.width, 0
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        password_field.password = False if password_field.password is True else True

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'center_y': .52}
            adaptive_height: True
            size_hint_max_x: dp(300)
            spacing: dp(15)

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True
                pos_hint: {'center_x': .5}

                MDRaisedButton:
                    text: 'Login'
                    font_size: sp(20)
                    size_hint_x: 1
                    md_bg_color: app.theme_cls.primary_color
                    on_release:
                        root.login(email_field.text, password_field.text)

            MDTextButton:
                text: "Forgot Password?"
                theme_text_color: "Custom"
                font_size: sp(25)
                text_color: "orange"
                pos_hint: {'center_x': .5}
                on_release:
                    root.forgot_password()

