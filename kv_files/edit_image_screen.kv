#:import EditImageScreen screens.edit_image
#:import EditImage widgets.EditImage
#:import DrawWidget widgets.EditImage
#:import MyCarousel widgets.MyCarousel


<Navbar@MDTopAppBar>
    type: 'small'
    md_bg_color: self.theme_cls.backgroundColor

    MDTopAppBarLeadingButtonContainer:

        MDActionTopAppBarButton:
            icon: 'arrow-left-bold'
            theme_icon_color: 'Custom'
            icon_color: self.theme_cls.primaryColor
            ripple_effect: False
            focus_behavior: False
            on_release:
                screen = app.root.get_screen(app.root.current)
                screen.change_section(self)

    MDTopAppBarTitle:
        text: 'edit image'
        theme_font_name: "Custom"
        font_name: 'Hacked'


<EditImageScreen>
    name: 'edit_image_screen'

    prompt: input_prompt.text

    MDScreenManager:
        id: screen_manager

        MDScreen:
            name: 'edit_section'

            MDFloatLayout:

                MDButton:
                    id: add_image_button
                    theme_width: 'Custom'
                    width: dp(100)
                    theme_height: 'Custom'
                    height: dp(100)
                    style: 'elevated'
                    opacity: 0 if self.disabled else 1
                    pos_hint: {"center_x": .5, 'center_y': .55}
                    on_release:
                        app.file_manager_open()

                    MDButtonIcon:
                        icon: 'image-plus'
                        theme_font_size: "Custom"
                        font_size: sp(78)
                        pos_hint: {'center_x': .5, 'center_y': .5}

                MDBoxLayout:
                    orientation: 'vertical'

                    Navbar:

                    MDBoxLayout:
                        id: image_box

                    MDBoxLayout:
                        id: bottom_buttons
                        orientation: 'horizontal'
                        padding: dp(10)
                        spacing: dp(20)
                        pos_hint: {'center_x': .5}
                        buttons_disabled: True
                        adaptive_height: True

                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(10)
                            adaptive_height: True

                            MDFabButton:
                                icon: 'broom'
                                style: 'small'
                                theme_icon_color: 'Custom'
                                icon_color: self.theme_cls.primaryColor
                                disabled: bottom_buttons.buttons_disabled
                                opacity: 0 if self.disabled else 1
                                on_release:
                                    root.clear_selection()

                            MDFabButton:
                                icon: 'image-sync'
                                style: 'small'
                                theme_icon_color: 'Custom'
                                icon_color: self.theme_cls.primaryColor
                                disabled: bottom_buttons.buttons_disabled
                                opacity: 0 if self.disabled else 1
                                on_release:
                                    root.reload_image()

                            MDSlider:
                                id: erase_percent
                                min: 1
                                max: 10
                                step: 1
                                value: 5

                                size_hint: None, None
                                width: dp(150)
                                height: dp(40)
                                disabled: bottom_buttons.buttons_disabled
                                opacity: 0 if self.disabled else 1


                                MDSliderHandle:

                                MDSliderValueLabel:

                        MDButton:
                            style: 'elevated'
                            radius: dp(10)
                            disabled: bottom_buttons.buttons_disabled
                            opacity: 0 if self.disabled else 1
                            pos_hint: {'center_x': .8}
                            on_release: root.change_section(self) if not self.disabled else None

                            MDButtonText:
                                text: 'next'
                                theme_font_name: 'Custom'
                                font_name: 'Hacked'
                                font_style: 'Headline'
                                role: 'small'


        MDScreen:
            name: 'option_section'

            MDFloatLayout:

                MDBoxLayout:
                    id: option_section
                    orientation: 'vertical'
                    spacing: dp(10)

                    Navbar:

                    MySegmentedButton:
                        orientation: 'horizontal'
                        adaptive_height: True
                        size_hint_x: None
                        width: dp(350)
                        pos_hint: {'center_x': .5}

                        MDButton:
                            style: 'elevated'
                            theme_width: 'Custom'
                            width: self.parent.width / 3
                            radius: [dp(25), 0, 0, dp(25)]
                            on_release:
                                self.parent.current = self
                                root.image_size = self.children[0].text

                            MDButtonText:
                                text: '256x256'
                                pos_hint: {'center_x': .5}
                                theme_font_name: 'Custom'
                                font_name: 'Hacked'
                                theme_font_size: 'Custom'
                                font_size: sp(16)
                                pos_hint: {'center_x': .5, 'center_y': .5}

                        MDButton:
                            style: 'elevated'
                            theme_width: 'Custom'
                            width: self.parent.width / 3
                            radius: [0, 0, 0, 0]
                            on_release:
                                self.parent.current = self
                                root.image_size = self.children[0].text

                            MDButtonText:
                                text: '512x512'
                                pos_hint: {'center_x': .5}
                                theme_font_name: 'Custom'
                                font_name: 'Hacked'
                                theme_font_size: 'Custom'
                                font_size: sp(16)
                                pos_hint: {'center_x': .5, 'center_y': .5}

                        MDButton:
                            style: 'elevated'
                            theme_width: 'Custom'
                            width: self.parent.width / 3
                            radius: [0, dp(25), dp(25), 0]
                            on_release:
                                self.parent.current = self
                                root.image_size = self.children[0].text

                            MDButtonText:
                                text: '1024x1024'
                                pos_hint: {'center_x': .5}
                                theme_font_name: 'Custom'
                                font_name: 'Hacked'
                                theme_font_size: 'Custom'
                                font_size: sp(16)
                                pos_hint: {'center_x': .5, 'center_y': .5}

                    MDBoxLayout:
                        orientation: 'horizontal'
                        pos_hint: {'center_x': .5}
                        size_hint_x: None
                        width: dp(140)
                        adaptive_height: True

                        MDButton:
                            style: 'elevated'
                            size_hint: None, None
                            size: dp(30), dp(30)
                            radius: dp(15)
                            on_release:
                                root.image_count -= 1

                            MDButtonIcon:
                                icon: 'minus'
                                pos_hint: {'center_x': .5, 'center_y': .5}


                        MDLabel:
                            id: img_count
                            text: str(root.image_count)
                            theme_font_name: "Custom"
                            font_name: 'Hacked'
                            theme_font_size: 'Custom'
                            font_size: sp(30)
                            halign: 'center'

                        MDButton:
                            style: 'elevated'
                            size_hint: None, None
                            size: dp(30), dp(30)
                            radius: dp(15)
                            on_release:
                                root.image_count += 1

                            MDButtonIcon:
                                icon: 'plus'
                                pos_hint: {'center_x': .5, 'center_y': .5}

                    MDBoxLayout:
                        orientation: 'vertical'

                        TextInput:
                            id: input_prompt
                            multiline: True
                            auto_indent: True
                            padding: dp(10)
                            border: [2, 2, 2, 2]
                            cursor_color: app.theme_cls.primaryColor
                            cursor_width: sp(3)
                            font_size: sp(18)
                            hint_text: 'Enter the prompt'
                            pos_hint: {'center_x': .5}

                        MDButton:
                            style: 'elevated'
                            theme_width: 'Custom'
                            size_hint_x: 1
                            size_hint_y: None
                            height: dp(60)
                            radius: dp(0)
                            on_release:
                                root.edit_image(self)

                            MDButtonText:
                                text: 'Generate'
                                pos_hint: {'center_x': .5}
                                theme_font_name: 'Custom'
                                font_name: 'Hacked'
                                font_style: 'Display'
                                role: 'medium'
                                pos_hint: {'center_x': .5, 'center_y': .5}

                MDCircularProgressIndicator:
                    id: edit_spin
                    size_hint: None, None
                    size: dp(38), dp(38)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    active: False

        MDScreen:
            name: 'completed_section'

            MDBoxLayout:
                orientation: 'vertical'

                MDBoxLayout:
                    orientation: 'horizontal'
                    padding: [dp(0), dp(10), dp(0), dp(10)]
                    spacing: dp(50)
                    pos_hint: {'center_x': .5}
                    adaptive_size: True

                    MDButton:
                        style: 'elevated'
                        radius: dp(10)
                        on_release:
                            app.root.transition = MDSwapTransition()
                            app.root.current = 'collection_screen'

                        MDButtonIcon:
                            icon: 'image-album'

                        MDButtonText:
                            text: 'gallery'
                            theme_font_name: 'Custom'
                            font_name: 'Hacked'

                    MDButton:
                        style: 'elevated'
                        radius: dp(10)
                        on_release:
                            root.edit_new_button(self)

                        MDButtonIcon:
                            icon: 'plus'

                        MDButtonText:
                            text: 'Edit new'
                            theme_font_name: 'Custom'
                            font_name: 'Hacked'

                MyCarousel:
                    id: carousel

                MDRelativeLayout:
                    size_hint_x: None
                    width: save_button.width
                    adaptive_height: True
                    pos_hint: {'center_x': .5}

                    MDBoxLayout:
                        adaptive_size: True
                        disabled: True if carousel.current_slide in carousel.saved_images else False
                        pos_hint: {'center_y': .5}

                        MDButton:
                            id: save_button
                            style: 'elevated'
                            radius: dp(10)
                            disabled: self.parent.disabled
                            on_release:
                                root.start_save(carousel.current_slide)

                            MDButtonIcon:
                                id: save_icon
                                icon: 'check-circle' if carousel.current_slide in carousel.saved_images else 'content-save'
                                disabled: True if save_spin.active else False
                                icon_color_disabled: self.parent.md_bg_color if save_spin.active else 'green'

                            MDButtonText:
                                id: save_text
                                text: 'saved' if carousel.current_slide in carousel.saved_images else 'save image'
                                theme_font_name: 'Custom'
                                font_name: 'Hacked'
                                theme_text_color: 'Primary'

                    MDCircularProgressIndicator:
                        id: save_spin
                        size_hint: None, None
                        size: dp(16), dp(16)
                        pos_hint: {'center_x': .15, 'center_y': .5}
                        active: False

